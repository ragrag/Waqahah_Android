<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:layout_marginEnd="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/border2"
            android:padding="7dp"
            android:text="Logout"
            android:textColor="#154436"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_refresh_btn"
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_alignBottom="@+id/logout_btn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp"
            card_view:srcCompat="@drawable/refresh_icon" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:elevation="12dp"
        android:gravity="center"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/userdp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:gravity="center"></ImageView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/user_link"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.02"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/prof_share"
            android:layout_width="39dp"
            android:layout_height="27dp"
            card_view:srcCompat="@drawable/share_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/user_about"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_weight="0.09"
        android:gravity="center"
        android:text="TextView"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>